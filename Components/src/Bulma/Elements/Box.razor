@namespace StableCube.Bulzor.Components

<div class="@_class">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public BulColor? Color { get; set; }

    private BulmaClassBuilder _classBuilder = new BulmaClassBuilder("box");
    private string _class = String.Empty;

    protected override void OnParametersSet()
    {
        _classBuilder.SetTextColor(Color);
        _class = _classBuilder.ToString();

        StateHasChanged();
    }
}