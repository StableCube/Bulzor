<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="5.0.8" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0" />
    <PackageReference Include="LibSassBuilder" Version="1.6.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Client/Demo.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Watch Remove="wwwroot/css/*.css" />
    <Watch Remove="../Client/**/*.css" />
    <Watch Include="../Client/**/*.razor" />
    <Watch Include="../Client/**/*.scss" />
  </ItemGroup>

  <ItemGroup>
    <SassFile Include="wwwroot/css/base.scss" />
    <SassFile Include="../Client/src/**/*.scss" />
  </ItemGroup>
</Project>
