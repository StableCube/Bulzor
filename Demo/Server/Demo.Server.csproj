<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="5.0.4" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="4.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
    <PackageReference Include="LibSassBuilder" Version="1.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Client/Demo.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="../Client/**/*.razor" />
    <Watch Include="../Client/**/*.cshtml" />
    <Watch Include="../Client/**/*.scss" />
  </ItemGroup>

  <ItemGroup>
    <SassFile Include="wwwroot/css/base.scss" />
    <SassFile Include="../Client/src/Components/**/*.scss" /> 
    <SassFile Include="../Client/src/Pages/**/*.scss" />
    <SassFile Include="../Client/src/Shared/**/*.scss" />
  </ItemGroup>
</Project>
