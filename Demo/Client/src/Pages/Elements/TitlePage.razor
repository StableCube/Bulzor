@page "/documentation/elements/title"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <TextSizeSelect Label="Title Size" @bind-Value="TitleSize" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <TextSizeSelect Label="Subtitle Size" @bind-Value="SubtitleSize" />
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulTitle Size="TitleSize">
                Title
            </BulTitle>
            <BulSubtitle Size="SubtitleSize">
                Subtitle
            </BulSubtitle>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulTextSize? TitleSize { get; set; }
    public BulTextSize? SubtitleSize { get; set; }
}