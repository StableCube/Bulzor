@page "/documentation/components/card"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="ShowHeader">
                            Show Header
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="ShowHeaderIcon">
                            Show Header Icon
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="ShowImage">
                            Show Image
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="ShowFooter">
                            Show Footer
                        </BulInputCheckbox>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulCard>
                @if(ShowHeader)
                {
                    <BulCardHeader>
                        <BulCardHeaderTitle>
                            Test Header
                        </BulCardHeaderTitle>

                        @if(ShowHeaderIcon)
                        {
                            <BulCardHeaderIcon>
                                <BulIcon class="fa fa-heart"/>
                            </BulCardHeaderIcon>
                        }
                    </BulCardHeader>
                }

                @if(ShowImage)
                {
                    <BulCardImage>
                        <BulImage Ratio="BulRatio.R4by3">
                            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                        </BulImage>
                    </BulCardImage>
                }

                <BulCardContent>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris.
                </BulCardContent>

                @if(ShowFooter)
                {
                    <BulCardFooter>
                        <BulCardFooterItem>
                            Normal Item
                        </BulCardFooterItem>
                        <BulCardFooterItemLink href="#">
                            Link Item
                        </BulCardFooterItemLink>
                    </BulCardFooter>
                }

            </BulCard>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public bool ShowHeader { get; set; } = true;
    public bool ShowHeaderIcon { get; set; } = true;
    public bool ShowImage { get; set; }
    public bool ShowFooter { get; set; } = true;
}