@page "/documentation/components/breadcrumb"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <div class="control">
                            <label class="label">Separator</label>
                            <BulInputSelectEnum @bind-Value="Separator" />
                        </div>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulBreadcrumb Separator="Separator">
                <ul>
                    <li><a>Root</a></li>
                    <li><a>Cool Place</a></li>
                    <li><a>Details</a></li>
                </ul>
            </BulBreadcrumb>
        </ExampleResult>
    </ExampleBox>

</DocumentationRoot>

@code {
    public BulSeparator Separator { get; set; } = BulSeparator.Default;
}