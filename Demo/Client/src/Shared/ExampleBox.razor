@namespace StableCube.Bulzor.Demo.Client

<div>
    @if(ExampleOptions != null)
    {
    <div class="options-box">
        <BulDivider Position="BulHorizontalPosition.Left">Options</BulDivider>
        <BulNotification>
            @ExampleOptions
        </BulNotification>
    </div>
    }
    
    @if(ExampleResult != null)
    {
    <div>
        <BulDivider Position="BulHorizontalPosition.Left">Example</BulDivider>
        @ExampleResult
    </div>
    }

</div>

@code {
    [Parameter]
    public RenderFragment ExampleOptions { get; set; }

    [Parameter]
    public RenderFragment ExampleResult { get; set; }
}
