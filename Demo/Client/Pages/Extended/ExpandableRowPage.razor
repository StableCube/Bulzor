@page "/documentation/extended/expandablerow"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <SchemeColorSelect Label="Color" @bind-Value="Color" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <SizeSelect Label="Size" @bind-Value="Size" />
                    </OptionsBoxItem>

                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulExpandableRow>
                <ExpandableRowHeader>Header</ExpandableRowHeader>
                <ExpandableRowContent>Content</ExpandableRowContent>
                <ExpandableRowFooter>Footer</ExpandableRowFooter>
            </BulExpandableRow>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulSchemeColor? Color { get; set; }
    public BulSize? Size { get; set; }
}