@page "/documentation/form/select"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <PrimaryColorSelect Label="Color" @bind-Value="Color" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <SizeSelect Label="Size" @bind-Value="Size" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <label class="label">Multiple</label>
                        <BulInputNumber @bind-Value="Multiple" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="Rounded">
                            Rounded
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="Loading">
                            Loading
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="HasIconsLeft">
                            Has Icons Left
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="HasIconsRight">
                            Has Icons Right
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="DemoIconLeft">
                            Demo Icon Left
                        </BulInputCheckbox>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="DemoIconRight">
                            Demo Icon Right
                        </BulInputCheckbox>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <EditForm Model="@Data">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <BulInputSelect @bind-Value="Data.StringData" 
                    Multiple="Multiple"
                    Size="Size" 
                    Color="Color" 
                    Rounded="Rounded"
                    Loading="Loading"
                    HasIconsLeft="HasIconsLeft"
                    HasIconsRight="HasIconsRight" >

                    <option value="Argentina">Argentina</option>
                    <option value="Bolivia">Bolivia</option>
                    <option value="Zorm">Zorm</option>
                    <option value="Burpee">Burpee</option>

                </BulInputSelect>
            </EditForm>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulPrimaryColor? Color { get; set; }
    public BulSize? Size { get; set; }
    public int Multiple { get; set; }
    public bool Rounded { get; set; }
    public bool Loading { get; set; }
    public bool HasIconsLeft { get; set; }
    public bool HasIconsRight { get; set; }
    public bool DemoIconLeft { get; set; }
    public bool DemoIconRight { get; set; }

    private DemoDataModel Data = new DemoDataModel() {
        IntData = 8,
        StringData = "hmmmmm",
    };
}