@page "/documentation/elements/image"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <RatioSelect 
                            Label="Ratio"
                            Value="Ratio" 
                            ValueChanged="@((value) => {
                                Ratio = value;
                                StateHasChanged();
                            })" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <DimensionSelect 
                            Label="Dimension"
                            Value="Dimension" 
                            ValueChanged="@((value) => {
                                Dimension = value;
                                StateHasChanged();
                            })" />
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulImage Ratio="Ratio" Dimension="Dimension">
                <img src="https://bulma.io/images/placeholders/128x128.png">
            </BulImage>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulRatio? Ratio { get; set; }
    public BulDimension? Dimension { get; set; }
}