@page "/documentation/elements/progress"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <PrimaryColorSelect Label="Color" @bind-Value="Color" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <SizeSelect @bind-Value="Size" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <label class="label">Progress</label>
                        <BulSlider 
                            Color="BulPrimaryColor.Primary" 
                            Min="0" 
                            Max="100"
                            @bind-Value="Progress" />
                        <BulInputNumber @bind-Value="Progress" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="Indeterminate">
                            Indeterminate
                        </BulInputCheckbox>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulProgressBar 
                Color="Color" 
                Size="Size"
                Indeterminate="Indeterminate"
                Value="Progress" />
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulPrimaryColor? Color { get; set; }
    public BulSize? Size { get; set; }
    public int Progress { get; set; } = 25;
    public bool Indeterminate { get; set; }

}