@page "/documentation/elements/progress"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <SchemeColorSelect Label="Color" @bind-Value="Color" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <SizeSelect @bind-Value="Size" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <label class="@BCss.Prefix("label")">Progress</label>
                        <BulSlider @bind-Value="Progress" Color="BulSchemeColor.Primary" Min="0" Max="100" />
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulInputCheckbox @bind-Value="Indeterminate">
                            Indeterminate
                        </BulInputCheckbox>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <div>Progress: @Progress%</div>
            <BulProgressBar 
                Color="Color" 
                Size="Size"
                Indeterminate="Indeterminate"
                Value="Progress" />
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    public BulSchemeColor? Color { get; set; }
    public BulSize? Size { get; set; }
    public double Progress { get; set; } = 25;
    public bool Indeterminate { get; set; }

}