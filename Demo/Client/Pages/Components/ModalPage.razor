@page "/documentation/components/modal"

<DocumentationRoot>
    <ExampleBox>
        <ExampleOptions>
            <EditForm Model="@this">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <OptionsBox>
                    <OptionsBoxItem>
                        <BulButton 
                            Color="BulSchemeColor.Primary" 
                            @onclick="OpenBasicModal">Launch Basic Modal</BulButton>
                    </OptionsBoxItem>

                    <OptionsBoxItem>
                        <BulButton 
                            Color="BulSchemeColor.Primary" 
                            @onclick="OpenCardModal">Launch Card Modal</BulButton>
                    </OptionsBoxItem>
                </OptionsBox>
            </EditForm>
        </ExampleOptions>

        <ExampleResult>
            <BulModal Active="IsBasicModalOpen">
                <BulModalBackground OnClick="CloseBasicModal" />
                <BulModalContent>
                    <BulImage Ratio="BulRatio.R4by3">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="">
                    </BulImage>
                </BulModalContent>
                <BulModalClose OnClick="CloseBasicModal" />
            </BulModal>

            <BulModal Active="IsCardModalOpen">
                <BulModalBackground OnClick="CloseCardModal" />
                <BulModalContent>
                    <BulModalCard>
                        <BulModalCardHead>
                            <BulModalCardTitle>
                                Modal Title
                            </BulModalCardTitle>
                            <BulDelete OnClick="CloseCardModal" />
                        </BulModalCardHead>
                        <BulModalCardBody>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla accumsan, 
                            metus ultrices eleifend gravida, nulla nunc varius lectus, nec rutrum 
                            justo nibh eu lectus. Ut vulputate semper dui. Fusce erat odio, 
                            sollicitudin vel erat vel, interdum mattis neque.
                        </BulModalCardBody>
                        <BulModalCardFoot>
                            <BulButton 
                                Color="BulSchemeColor.Success" 
                                @onclick="CloseCardModal">Save changes</BulButton>

                            <BulButton @onclick="CloseCardModal">Cancel</BulButton>
                        </BulModalCardFoot>
                    </BulModalCard>
                </BulModalContent>
            </BulModal>
        </ExampleResult>
    </ExampleBox>
</DocumentationRoot>

@code {
    private bool IsBasicModalOpen { get; set; }
    private bool IsCardModalOpen { get; set; }

    public void OpenBasicModal(MouseEventArgs args)
    {
        IsBasicModalOpen = true;
        StateHasChanged();
    }

    public void CloseBasicModal(MouseEventArgs args)
    {
        IsBasicModalOpen = false;
        StateHasChanged();
    }

    public void OpenCardModal(MouseEventArgs args)
    {
        IsCardModalOpen = true;
        StateHasChanged();
    }

    public void CloseCardModal(MouseEventArgs args)
    {
        IsCardModalOpen = false;
        StateHasChanged();
    }
}